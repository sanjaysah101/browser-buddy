{
  "name": "browser-buddy",
  "version": "1.0.0",
  "description": "AI-Powered Productivity Enhancement Extension",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "biome lint .",
