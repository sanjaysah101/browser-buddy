    "@types/node": "22.10.5",
    "@types/react": "19.0.2",
    "@types/react-dom": "19.0.2",
    "@vitejs/plugin-react": "4.3.4",
    "archiver": "7.0.1",
    "autoprefixer": "10.4.20",
    "postcss": "8.4.49",
    "tailwindcss": "3.4.17",
    "terser": "5.37.0",
    "typescript": "5.7.2",
    "vite": "6.0.7"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
